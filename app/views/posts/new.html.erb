<h1>New Post</h1>

  <% if @post.invalid? %>
    <% @post.errors.each do |err| %>
      <h2><%= err %></h2>
    <% end %>
  <% else %>
      <%= nil %>
  <% end %>
</h2>

<%= form_with model: @post do |form| %>
<div>
  <%=form.label :title %><br>
  <%=form.text_field :title %>
</div>

<div>
  <%=form.label :body %><br>
  <%=form.text_field :body %>
</div>

<div>
  <%= form.submit %>
</div>

<% end %>