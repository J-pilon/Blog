<h1>All Posts</h1>

<section>

  <% @posts.each do |post| %>
    <article>
      <h2><%= post.title %></h2>
      <p><%= post.body %></p>
      <p><%= link_to "Destroy", post_path(post), method: :delete, data: { confirm: "Are you sure?" }%></p>
      <p><%= link_to "Edit", "posts/#{post.id}/edit" %></p>
    </article>
  <% end %>

</section>